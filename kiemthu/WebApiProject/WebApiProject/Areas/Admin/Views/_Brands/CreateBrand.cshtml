@model WebApiProject.Models.ThuongHieu

@{
    ViewBag.Title = "CreateBrand";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage) || !string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-success">
            @ViewBag.SuccessMessage
            @ViewBag.ErrorMessage
        </div>
    }
</div>
@using (Html.BeginForm("PostBrand", "_Brands", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.AntiForgeryToken()
<div class="card">
    <div>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary mt-3" })
    </div>
    <div class="card-body">
        <h4 class="card-title">Thương Hiệu Mới</h4>
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @*@Html.LabelFor(model => model.brand_name, htmlAttributes: new { @class = "col-md-2 col-form-label" })*@
            <label class="col-md-2 col-form-label"> Tên thương hiệu</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.brand_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.brand_name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-10 offset-md-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>
    
}

