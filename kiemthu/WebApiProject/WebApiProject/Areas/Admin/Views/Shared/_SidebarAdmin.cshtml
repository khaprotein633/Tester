                <li class="nav-item">
                    <a href="#" class="nav-link active">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>
                            Dashboard
                        </p>
                    </a>
                </li>

                <!-- Sản phẩm -->
                <li class="nav-item">
                    <a href="@Url.Action("GetProduct", "_Products")" class="nav-link">
