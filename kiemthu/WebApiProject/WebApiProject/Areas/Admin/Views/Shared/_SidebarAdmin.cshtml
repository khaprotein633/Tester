                <img src="~/Areas/content/dist/img/13048085.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            @if (Session["user"] != null)
            {
                NguoiDung admin = (NguoiDung)Session["user"];
                <div class="info">
                    <a href="#" class="d-block">@admin.name</a>
                </div>
            }

        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
